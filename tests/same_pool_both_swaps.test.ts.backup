      const existingConfig = await program.account.protocolTokenConfig.fetch(protocolTokenConfigAddr);
      console.log(`   Existing KEDOL Mint: ${existingConfig.protocolTokenMint.toString()}`);
      console.log(`   Our KEDOL Mint: ${protocolTokenMint.toString()}`);
      
